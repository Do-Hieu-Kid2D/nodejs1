<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <title>Document</title>
    </head>
    <body>
        <div class="container">
            <!-- form tạo user  -->
            <h3 class="mt-3">Edit a user</h3>
            <!-- <%= JSON.stringify(userData) %> -->
            <form method="post" action="/users/update-user/<%=userData.id %>">
                <div class="row col-6">
                    <div class="mb-3 row">
                        <label for="inputEmail" class="col-sm-4 col-form-label"
                            >Sửa Email</label
                        >
                        <div class="col-sm-10">
                            <input
                                type="email"
                                class="form-control"
                                id="inputEmail"
                                name="inputEmail"
                                value="<%=userData.email %>"
                                required
                            />
                        </div>
                    </div>
                    <div class="mb-3 mt-3 row">
                        <label
                            for="inputUsername"
                            class="col-sm-4 col-form-label"
                            >Sửa Username</label
                        >
                        <div class="col-sm-10">
                            <input
                                type="text"
                                class="form-control"
                                id="inputUsername"
                                name="inputUsername"
                                value="<%=userData.username %>"
                                required
                            />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label
                            for="inputPassword"
                            class="col-sm-4 col-form-label"
                            >Nhập Password mới</label
                        >
                        <div class="col-sm-10">
                            <input
                                type="text"
                                class="form-control"
                                name="inputPassword"
                            />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label
                            for="inputNameDisplay"
                            class="col-sm-4 col-form-label"
                            >Sửa Name display</label
                        >
                        <div class="col-sm-10">
                            <input
                                type="text"
                                class="form-control"
                                name="inputNameDisplay"
                                value="<%=userData.name %>"
                                required
                            />
                        </div>
                    </div>
                    <input
                        type="text"
                        hidden
                        name="passdefault"
                        value="<%=userData.passwords %>"
                    />
                    <input
                        type="submit"
                        value="Sửa user user!"
                        class="btn btn-primary"
                    />
                </div>
            </form>
        </div>
    </body>
</html>
